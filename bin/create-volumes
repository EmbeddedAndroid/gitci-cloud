#!/bin/bash
GCLOUD=`which gcloud`

if [ -z "$GCLOUD" ]; then
    echo "No gcloud executable found: aborting."
    exit 1
fi

"$GCLOUD" compute disks create vol-gitci-storage-artifacts --size=200GB
"$GCLOUD" compute disks create vol-gitci-storage-static --size=200GB
"$GCLOUD" compute disks create vol-gitci-redis-data --size=200GB
